<%= form_for @price, url: admin_prices_path do |f| %>

  <%= f.label t("main_table.category") %>
  <%= select_tag 'price[category_id]', options_for_select(nested_set_options(Category) {|i| "#{'--' * i.level} #{i.name}" } ) %>

  <%= f.label t("main_table.name") %>
  <%= f.text_field :name %><br />

  <%= f.label t("main_table.desc") %>
  <%= f.text_field :description %><br />

  <%= f.label t("main_table.price") %>
  <%= f.text_field :value %><br />

  <%= f.submit t("form.create_btn"), :class => "btn btn-primary" %>
<% end %>
