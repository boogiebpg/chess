!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Price"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements


    = stylesheet_link_tag 'http://blueimp.github.com/cdn/css/bootstrap.min.css'
    = stylesheet_link_tag '/javascripts/jquery-file-upload/css/style.css'
    = stylesheet_link_tag "http://blueimp.github.com/cdn/css/bootstrap-responsive.min.css"
    = stylesheet_link_tag 'application'
    /[if lt IE 7]
      = stylesheet_link_tag "http://blueimp.github.com/cdn/css/bootstrap-ie6.min.css"
    = stylesheet_link_tag "http://blueimp.github.com/Bootstrap-Image-Gallery/css/bootstrap-image-gallery.min.css"
    = stylesheet_link_tag "/javascripts/jquery-file-upload/css/jquery.fileupload-ui.css"
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"



    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js'

    = javascript_include_tag "application"

    = javascript_include_tag 'http://blueimp.github.com/JavaScript-Templates/tmpl.min.js'
    = javascript_include_tag 'http://blueimp.github.com/JavaScript-Load-Image/load-image.min.js'

    = javascript_include_tag '/javascripts/jquery-file-upload/js/jquery.iframe-transport.js'
    = javascript_include_tag '/javascripts/jquery-file-upload/js/jquery.fileupload.js'
    = javascript_include_tag '/javascripts/jquery-file-upload/js/jquery.fileupload-ui.js'



    -#= stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag 'http://blueimp.github.com/cdn/css/bootstrap.min.css'
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
         
          = link_to t("menu_items.root"), root_path, :class => "brand"
          
          .container.nav-collapse
            %ul.nav
              %li= Auth.draw_admin_menu
              %li= link_to t("menu_items.prices"), admin_path
              %li= link_to t("menu_items.cats"), admin_categories_path
              %li= link_to t("menu_items.pass"), admin_auth_url(1)

    .container

      - if flash[:notice]
        .alert.alert-success
          = flash[:notice]
      - if flash[:alert]
        .alert.alert-error
          = flash[:alert]

      .content
        .row
          .span9
            = yield
          .span3
            .well.sidebar-nav
              %h3= t("lang.langs")
              %ul.nav.nav-list
                %li.nav-header= t("lang.select_lang")
                %li= link_to "En", url_for( :locale => 'en' )
                %li= link_to "Ru", url_for( :locale => 'ru' )
                
    
      %footer
        %p &copy; Company 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    =# javascript_include_tag "application"

